{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "main",
    "/^release-(([1-9]+\\.([0-9]+))|(0\\.([1-9][0-9]{2,}|[2-9][0-9]|1[6-9])))$/"
  ],
  "prConcurrentLimit": 3,
  "lockFileMaintenance": {
    "enabled": false
  },
  "postUpdateOptions": [
    "gomodTidy",
    "gomodVendor"
  ],
  "labels": [
    "release-note-none"
  ],
  "extends": [
    ":gitSignOff"
  ],
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "enabled": false,
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "assigneesFromCodeOwners": true,
  "separateMajorMinor": true,
  "ignorePaths": [
    "**/vendor/**"
  ]
}
