#!/bin/bash

KUBEVIRT_VERSION="v0.51.0"
CDI_VERSION="v1.46.0"
NETWORK_ADDONS_VERSION="v0.74.0"
SSP_VERSION="v0.13.2"
TTO_VERSION="v0.1.2"
NMO_VERSION="v0.11.3"
HPPO_VERSION="v0.12.1"
HPP_VERSION="v0.12.0"
